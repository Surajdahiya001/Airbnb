<% layout("/layout/boilerplate") %>

    <body>


        <div class="row">
            <div class="col-8 offset-2">




                <h3>Listings details :</h3>
                <div class="card listing-card">

                    <img src="<%=data.image%>" class="card-img-top show-img" alt="">
                    <div class="card-body">
                        <p class="card-text">
                            <b>
                                <%= data.title %>
                            </b><br>
                            <%= data.description %> <br>
                                &#8377;<%= data.price.toLocaleString("en-IN")%> <br>
                                    <%= data.location %> <br>
                                        <%= data.country %> <br>
                        </p>
                    </div>
                </div>

                <div class="row">

                    <div class="col-1">
                        <form method="get" action="/login/<%= data._id %>/edit">

                            <button class="btn add-btn btn-dark">edit</button>
                        </form>
                        <br>

                    </div>

                    <div class="col-2">
                        <form method="post" action="/login/<%= data._id %>?_method=DELETE">

                            <button class="btn btn-dark">delete</button>
                        </form>

                    </div>


                </div>



            </div>

            <div class="col-8 offset-2 mb-3">
                <hr>
                <h4>Leave a Review</h4>
                <form method="POST" action="/login/<%= data.id %>/reviews" novalidate class="needs-validation">

                    <div class="mb-3 mt-3">
                        <label class="form-label" for="rating">Rating</label>
                        <input type="range" min="1" max="5" name="review[rating]" id="rating" class="form-range">

                    </div>

                    <div class="mb-3 mt-3">
                        <label class="form-label" for="comments">comments</label>
                        <textarea name="review[comment]" cols="30" rows="10" class="form-control" id="comments"
                            required></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please Enter Reviews !
                        </div>
                    </div>
                    <button class="btn btn-outline-dark">Submit</button>
                </form>

                <hr>

                <p><b>All Reviews</b></p>

                <div class="row">



                    <% for(review of data.review){ %>

                        <div class="card col-5 mb-3 ms-3">
                            <div class="card-body">
                                <h5 class="card-title">Jane Doe</h5>
                                <p class="card-text">
                                    <%= review.comment %>
                                </p>
                                <p class="card-text">
                                    <%= review.rating %> Stars
                                </p>

                                <form method="POST" action="/login/<%= data.id %>/reviews/<%= review.id %>?_method=DELETE">
                                    <button class="btn btn-sm btn-dark">Delete</button>
                                </form>
                            </div>
                        </div>


                        <% } %>


                </div>
            </div>
        </div>
        </div>
    </body>