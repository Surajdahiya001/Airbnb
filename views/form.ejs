<% layout("/layout/boilerplate") %>


  <body>



    <form action="/login" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
      <div class="row">
        <div class="col-8 offset-2">
          <h2 class="mt-3">create new place</h2>


          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" placeholder="Enter your title" name="data[title]"
              required>
            <div class="valid-feedback">
              Looks good!
            </div>
            <div class="invalid-feedback">
              Please Enter this Field !
            </div>
          </div>
          <div class="mb-3">
            <label for="description" class="form-label">description</label>
            <textarea type="text" class="form-control" id="description" placeholder="Enter description"
              name="data[description]" required></textarea>
            <div class="valid-feedback">
              Looks good!
            </div>
            <div class="invalid-feedback">
              Please Enter this Field !
            </div>
          </div>

          <div class="mb-3">
            <label for="image" class="form-label">Upload Image</label>
            <input type="file" class="form-control" id="image" name="data[image]" required>
            <div class="row">

              <div class="mb-3 col-md-4">
                <label for="country" class="form-label">country</label>
                <input type="text" class="form-control" id="country" placeholder="Enter country" name="data[country]" required>
                  <div class="invalid-feedback">
                    Please Enter this Field !
                  </div>
              </div>

              <div class="mb-3 col-md-8">
                <label for="price" class="form-label">price</label>
                <input class="form-control" id="price" placeholder="Enter price" name="data[price]" required>
                <div class="invalid-feedback">
                  Please Enter this Field !
                </div>
              </div>

            </div>

            <div class="row">

              <div class="mb-3 col-md-8">
                <label for="place" class="form-label">Place</label>
                <input type="text" class="form-control" id="place" placeholder="Enter location" name="data[location]"
                  required>
                <div class="invalid-feedback">
                  Please Enter this Field !
                </div>
              </div>

              <div class="mb-3 col-md-4">
                <label for="category" class="form-label">Select Category</label>
                <select class="form-select" name="data[category]" id="category" aria-label="Default select example">
                  <option selected>Trending</option>
                  <option value="Rooms">Rooms</option>
                  <option value="city">Iconic city</option>
                  <option value="Mountain">Mountain</option>
                  <option value="Castle">Castle</option>
                  <option value="Pools">Amazing Pools</option>
                  <option value="Camping">Camping</option>
                  <option value="Farms">Farms</option>
                  <option value="Arctic">Arctic</option>
                  <option value="Boats">Boats</option>
                  <option value="Lakes">Lakes</option>
                  <option value="New">New</option>
                </select>
                <div class="invalid-feedback">
                  Please Enter this Field !
                </div>
              </div>
            </div>
            <button type="submit" class="btn add-btn btn-dark">Add</button>
          </div>
        </div>
        </div>
    </form>



    
  </body>