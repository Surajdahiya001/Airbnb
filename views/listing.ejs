<% layout("/layout/boilerplate") %>

  <body>
    <h1>all listing</h1>


    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
      <% for(let alldata of alldatas){ %>


        <a class="card-link" href="/login/<%= alldata._id %>">

          <div class="card col listing-card">
            <img src="<%= alldata.image %>" class="card-img-top" style="height:20rem;" alt="...">
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text">
                <b>
                  <%= alldata.title %>
                </b> <br>
                &#8377;<%= alldata.price %>/ night <br>

              </p>
            </div>
          </div>

        </a>

        <% } %>

    </div>





  </body>