<% layout("/layout/boilerplate") %>


<style>

#filters {

display: flex;
flex-wrap: wrap;
align-items: center;
}
.all-filter{

display: flex;
/* flex-wrap: wrap; */
/* align-items: center; */
}

.filter {

text-align: center; 
margin-top: 1.5rem;
margin-left: 2rem;
opacity: 0.8;
}


.filter p {
font-size: 0.8rem;
}

.filter:hover {

opacity: 1;
cursor: pointer;
}

.tax-info {

display: none;
}
.overflow-x-scroll{
overflow-x: auto !important;
}

.tax-toggle {

border: 1px solid #aaaaaa;
border-radius: 1rem;
height: 3rem;
display: flex;
align-items: center;
padding: 1rem;
margin-left: 5rem;
}

</style>

  <body>
    <div id="filters">
      <div class="all-filter overflow-x-scroll ">
        <div class="filter" onclick="filterCategory('Trending')">
          <div><i class="fa-solid fa-fire"></i></div>
          <p>Trending</p>
        </div>

        <div class="filter" onclick="filterCategory('Rooms')">
          <div><i class="fa-solid fa-bed"></i></div>
          <p>Rooms</p>
        </div>

        <div class="filter" onclick="filterCategory('City')">
          <div><i class="fa-solid fa-city"></i></div>
          <p>Iconic city</p>
        </div>

        <div class="filter" onclick="filterCategory('Mountain')">
          <div><i class="fa-solid fa-mountain"></i></div>
          <p>Mountain</p>
        </div>

        <div class="filter" onclick="filterCategory('Castle')">
          <div><i class="fa-brands fa-fort-awesome"></i></div>
          <p>Castle</p>
        </div>

        <div class="filter" onclick="filterCategory('Pools')">
          <div><i class="fa-solid fa-person-swimming"></i></div>
          <p>Amazing Pools</p>
        </div>

        <div class="filter" onclick="filterCategory('Camping')">
          <div><i class="fa-solid fa-campground"></i></div>
          <p>Camping</p>
        </div>

        <div class="filter" onclick="filterCategory('Farms')">
          <div><i class="fa-solid fa-cow"></i></div>
          <p>Farms</p>
        </div>

        <div class="filter" onclick="filterCategory('Arctic')">
          <div><i class="fa-solid fa-snowflake"></i></div>
          <p>Arctic</p>
        </div>

        <div class="filter" onclick="filterCategory('Boats')">
          <div><i class="fa-solid fa-sailboat"></i></div>
          <p>Boats</p>
        </div>

        <div class="filter" onclick="filterCategory('Lakes')">
          <div><i class="fa-solid fa-water"></i></div>
          <p>Lakes</p>
        </div>
        <div class="filter" onclick="filterCategory('New')">
          <div><i class="fa-solid fa-key"></i></div>
          <p>New</p>
        </div>

      </div>
      <div class="tax-toggle">
        <div class="form-check form-switch form-check-reverse">
          <input class="form-check-input" type="checkbox" id="flexSwitchCheckReverse">
          <label class="form-check-label" for="flexSwitchCheckReverse">Display total after taxes</label>
        </div>
      </div>
    </div>


    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-2">
      <% for(let alldata of alldatas){ %>


        <a class="card-link" href="/login/<%= alldata._id %>">

          <div class="card col listing-card">
            <img src="<%= alldata.image.url %>" class="card-img-top" style="height:20rem;" alt="...">
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text">
                <b>
                  <%= alldata.title %>
                </b>
              </b> <br> &#8377;<%= alldata.price %>/ night
              <i class="tax-info" style="color: #007185;"><b>+ </b>&#8377;<%=alldata.price*18 /100 %> +18% GST</i>

              </p>
            </div>
          </div>

        </a>

        <% } %>

    </div>

  </body>

  <SCript>

    let taxswitch = document.getElementById("flexSwitchCheckReverse");

    taxswitch.addEventListener("click", ()=>{

let taxinfo = document.getElementsByClassName("tax-info");

for(info of taxinfo){

  if(info.style.display != "inline"){
    
    info.style.display = "inline";
    
  }else{    
    
    info.style.display = "none";
  }
}

    })

    let filterCategory = (category) => {
      // Redirect to the specified category
      window.location.href = `/login/?category=${encodeURIComponent(
        category
      )}`;
    };
  </SCript>